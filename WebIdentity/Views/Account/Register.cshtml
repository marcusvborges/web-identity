@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<style>
    /* Garantindo que o body ocupe 100% da tela sem margens extras */
    html, body {
        height: 100%;
        margin: 0;
    }

    /* Mantém a centralização do card */
    .register-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        max-width: 450px; /* Agora mais largo */
    }
</style>

<!-- Container de registro -->
<div class="register-container">
    <div class="card shadow-lg p-5 border-0 rounded-4">
        <div class="text-center">
            <h3 class="fw-bold">Register</h3>
            <p class="text-muted">Create your account</p>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control border rounded-3 px-3 py-2" placeholder="E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control border rounded-3 px-3 py-2" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control border rounded-3 px-3 py-2" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                @* <a asp-controller="Account" asp-action="Login" class="text-primary text-decoration-none">Already have an account?</a> *@
                <button type="submit" class="btn btn-primary rounded-3 px-4">Register</button>
            </div>
        </form>
    </div>
</div>


